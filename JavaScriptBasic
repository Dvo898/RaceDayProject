let raceNumber = Math.floor(Math.random()*1000);
var runnerRegister = true;
var runnerAge = 15;
if (runnerAge >= 18 && runnerRegister===true ){
    raceNumber = raceNumber + 1000;
}
if(runnerAge >=18 && runnerRegister===true ){
    console.log(`Hi racer number ${raceNumber}.The race will start at 9:30am`);
}
else if(runnerAge >= 18 && runnerRegister===false ){
    console.log(`Hi racer number ${raceNumber}. Late adults run at 11:00 am`);
}
else{
    console.log(`Hi racer number ${raceNumber}. Youth registrants run at 12:30 pm (regardless of registration)`);
}
